<!DOCTYPE html>
<html>
<head>
       <% include ../partials/head %>
</head>

<body>

		<nav class="navbar navbar-inverse bg-inverse">
		  	<div class="container">
		  		<a class="navbar-brand" href="/">
			    Online Voting System | Create Candidate
			  	</a>
			  	<a class="navbar-brand" id="user-profile" href="#">Admin</a>
			  	<a href="index.html" class="navbar-brand" id="user-profile"> Logout</a>

		  	</div>
		</nav>

		<div class="bodyContainer container">
			<div class="row">
				<div class="col-6 touchdown">
          <form method="post" action="/candidates/save">
					  <div class="form-group">
						    <label for="electionName">Candidate Name</label>
						    <input type="text" name="name" class="form-control" value="" placeholder="Name">
					  </div>


          <div class="form-group">
             <label for="candidateType">Candidate Type</label>
             <select class="form-control" name="candidateType" required>
               <option>Presidential</option>
               <option>Parliamentary</option>
             </select>
         </div>
         <div class="form-group">
            <label for="cAddress">Address</label>
            <input type="text" name="address" value=""  class="form-control" placeholder="Address">
        </div>

        <div class="form-group">
            <label for="cAddress">Party</label>
                 <select class="form-control" name="party" required>
                  <% for(var i = 0; i< parties.length; i++) { %>
                  <option><%= parties[i].name %></option>
                  <% } %>
                </select>
        </div>

		  		 <input class="btn btn-primary" id="createElectionBtn" value="Create Candidate" type="submit">
         </form>
		      </div>
      </div>
	</div>
      <% include ../partials/footer %>
</body>
</html>
