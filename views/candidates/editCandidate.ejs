<!DOCTYPE html>
<html>
<head>
       <% include ../partials/head %>
</head>

<body>

		<% include ../partials/adminHead %>

		<div class="bodyContainer container">
			<div class="row">
				<div class="col-6 touchdown">
          <form method="post" action="/candidates/edit/<%= candidate._id %>">
					  <div class="form-group">
						    <label for="electionName">Candidate Name</label>
						    <input type="text" name="name" class="form-control" value="<%= candidate.name %>" placeholder="Name">
					  </div>


          <div class="form-group">
             <label for="candidateType">Candidate Type</label>
             <select class="form-control" name="candidateType"  value="<%= candidate.type %>"required>
               <option>Presidential</option>
               <option>District</option>
             </select>
         </div>
         <div class="form-group">
            <label for="cAddress">Address</label>
            <input type="text" name="address" value="<%= candidate.address %>"  class="form-control" placeholder="Address">
        </div>
        <div class="form-group">
           <label for="cAddress">Party</label>
          <input type="text" class="form-control" name="party" value="<%= candidate.party %>" placeholder="Party">
       </div>

		  		 <input class="btn btn-primary" id="createElectionBtn" value="Save changes" type="submit">
         </form>
		      </div>
      </div>
	</div>
      <% include ../partials/footer %>
</body>
</html>
