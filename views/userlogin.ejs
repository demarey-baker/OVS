<!DOCTYPE html>
<html>
  <% include ./partials/head %>
<body>

		<nav class="navbar navbar-inverse bg-inverse">
		  	<div class="container">
		  		<a class="navbar-brand" href="/">
			    Online Voting System | User Login
			  	</a>

			  	<a class="navbar-brand" id="user-profile" href="#">John Brown</a>
			  	<a href="/" class="navbar-brand" id="user-profile"> Logout</a>

		  	</div>
		</nav>

		<div class="container">

			<div id="user-menus">
					<ul class="nav nav-tabs" role="tablist">
					  <li class="nav-item">
					    <a class="nav-link active" href="#ongoing" role="tab" data-toggle="tab">Ongoing Elections</a>
					  </li>
					  <li class="nav-item">
					    <a class="nav-link" href="#results" role="tab" data-toggle="tab">Results</a>
					  </li>
					  <li class="nav-item">
					    <a class="nav-link" href="#profile" role="tab" data-toggle="tab">My Profile</a>
					  </li>
					</ul>

					<!-- Tab panes -->
					<div class="tab-content">
					  <div role="tabpanel" class="tab-pane active" id="ongoing">
					  	<div class="col-6">
                <% for(var i=0; i< elections.length; i++) {%>
                <div class="elections">
                  <h3> <%= elections[i].electionName  %> </h3>
                  <div>
                    <span>Election Type: <%= elections[i].electionType  %></span><br/>
                    <span>Date : <%= elections[i].electionSDate  %></span>
                    <a href="/users/vote/<%= elections[i]._id %>"><button class="btn btn-primary" >Vote in this election</button></a>

                  </div>
                </div>
                 <% } %>

					  	</div>

					  </div>

					  <div role="tabpanel" class="tab-pane fade" id="results">
					  		<div class="form-group">
							    <label for="chooseElection">Choose Election</label>
							    <select class="form-control" id="chooseElection">
							      <option>Election 1</option>
							      <option>Election 2</option>
							      <option>Election 3</option>
							    </select>
							  </div>

							  <div id= "result-box" class="jumbotron">
							  		<table class="table">
										  <thead>
										    <tr>
										      <th>Candidate</th>
										      <th>Vote Percentage</th>
										    </tr>
										  </thead>
										  <tbody>
										    <tr>
										      <td>Mark Brown</td>
										      <td>53%</td>
										    </tr>
										    <tr>
										      <td>John Fielding</td>
										      <td>40%</td>
										    </tr>
										    <tr>
										      <td>Seth Gray</td>
										      <td>7%</td>
										    </tr>

										  </tbody>
										</table>
							  </div>


					  	</div>
					  	 <div role="tabpanel" class="tab-pane fade" id="profile">
					  			<div>
					  				<h2>John Brown</h2>
					  				<p>St John's, NL, Canada</p>
					  				<button class="btn-success btn">Change personal details</button>
					  			</div>

					  	</div>
					  </div>







					</div>



			</div>

		</div>


</body>
</html>
