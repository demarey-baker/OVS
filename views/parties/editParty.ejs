<!DOCTYPE html>
<html>
<head>
    <% include ../partials/head %>
</head>

<body>

<% include ../partials/adminHead %>

<div class="bodyContainer container">
    <div class="row">
        <div class="col-6 touchdown">
            <form method="post" action="/parties/edit/<%= party._id %>">
                <div class="form-group">
                    <label for="partName">Party Name</label>
                    <input type="text" name="name" class="form-control" value="<%= party.name %>" placeholder="Name">
                </div>


                <div class="form-group">
                    <label for="ShortName">Party Short-name</label>
                    <input type="text" name="shortName" class="form-control" value="<%= party.shortName %>"placeholder="ShortName">
                </div>


                    <div class="form-group">
                        <label for="pLeader">Leader</label>
                        <input type="text" name="partyLeader" value="<%= party.partyLeader %>"  class="form-control" placeholder="Party Leader">
                </div>

                    <div class="form-group">
                        <label for="pAddress">Address</label>
                        <input type="text" name="address" value="<%= party.address %>"  class="form-control" placeholder="Address">
                </div>

                <div class="form-group">
                    <label for="Website">Website</label>
                    <input type="text" class="form-control" name="website" value="<%= party.website %>" placeholder="Website URL">
                </div>

                <input class="btn btn-primary" id="editPartyBtn" value="Save changes" type="submit">
            </form>
        </div>
    </div>
</div>
<% include ../partials/footer %>
</body>
</html>
